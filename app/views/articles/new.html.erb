<h1>New Article</h1>

<%= form_with model: @article do |form| %>
    <div>
        <%= form.label :title %><br>
        <% form.text_field :title %>
        <% @article.error.full_messages_for(:title).each do |mesage|%>
            <div><%= message %></div>
        <% end %>
    </div>

     <div>
        <%= form.label :body %><br>
        <% form.text_area :body %>
         <% @article.error.full_messages_for(:body).each do |mesage|%>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <% form.submit%>
    </div>